<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Gardens</h1>
    <%= link_to "New garden", new_garden_path, class: 'btn btn-success' %>
  </div>

  <div id="gardens">
    <% @gardens.each do |garden| %>
      <%= link_to garden do %>
        <%= render garden %>
      <% end %>
      <br>
    <% end %>
  </div>
</div>

